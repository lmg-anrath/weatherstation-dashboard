---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <title>{ title }</title>
  </head>
  <body>
    <slot/>
  </body>
</html>

<style>
  body,html {
    /*background-color: rgb(38, 38, 54);*/
    background-color: rgb(22, 27, 42);
    padding: 0;
    margin: 0;
    color: #fff;
    font-family: Arial, Helvetica, sans-serif;
  }
  *::-webkit-scrollbar {
  width: 5px;
  height: 5px;
  }
  *::-webkit-scrollbar-track {
  background-color: rgba(165, 165, 165, 0);
  border-radius: 10px;
  }
  *::-webkit-scrollbar-thumb {
  background-color: #474747;
  border-radius: 10px;
  }
</style>